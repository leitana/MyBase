<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:minHeight="@dimen/actionbar_height"
    android:background="@color/theme_color">
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/base_actionbar_btn_bg"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/actionbar_left_image_width"
            android:layout_height="@dimen/actionbar_height"
            android:scaleType="center"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:id="@+id/tv_left1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_toLeftOf="@id/iv_left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_right2"
        android:layout_width="@dimen/actionbar_height"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:background="@drawable/base_actionbar_btn_bg"
        android:clickable="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/iv_right1"
        android:layout_width="@dimen/actionbar_height"
        android:layout_height="@dimen/actionbar_height"
        android:layout_toLeftOf="@id/iv_right2"
        android:scaleType="center"
        android:background="@drawable/base_actionbar_btn_bg"
        android:clickable="true"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_right2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/base_actionbar_btn_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/actionbar_text_size"
        android:textColor="@color/white"
        android:text=""
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_right1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_toLeftOf="@id/tv_right2"
        android:background="@drawable/base_actionbar_btn_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/actionbar_text_size"
        android:textColor="@color/white"
        android:text=""
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="-1"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/actionbar_title_size" />
</RelativeLayout>